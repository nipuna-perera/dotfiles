# theme = Everforest Dark - Hard
# theme = nordfox
theme = catppuccin-mocha

font-size = 16
font-family = JetBrainsMono Nerd Font Mono

copy-on-select = true
mouse-hide-while-typing = true

macos-non-native-fullscreen=visible-menu
macos-titlebar-style = hidden
macos-option-as-alt = true

window-decoration = false
window-padding-y = 0
window-padding-x = 5
window-padding-color = extend
window-padding-balance = true
window-save-state = always

# new tmux session
keybind = cmd+t=text:\x02\x63
# zoxide
keybind = cmd+j=text:\x02\x54
# last tmux session
keybind = cmd+l=text:\x02L
# Split pane to right
keybind = cmd+shift+e=text:\x02%
# Split pane to bottom
keybind = cmd+e=text:\x02\"
# zoom pame
keybind = cmd+z=text:\x02z
# kill pane
keybind = cmd+x=text:\x02x
# open lfcd
keybind = cmd+f=text:lfcd\n
# tmux copy-mode
keybind = cmd+[=text:\x02[
# clear screen
keybind = cmd+k=text:\x02\x0C